<%- include("header") -%>
<!------------- Log In Form ------------>

<div id="form" class="container-fluid form">

  <form action="/login" method="POST">

    <h1 class="form-name">Log In</h1>

    <div class="form-group">
      <label for="exampleInputEmail1">Email</label>
      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter username" name="email">
    </div>

    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
    </div>

    <button type="submit" class="form-button btn btn-inv">Log In</button>

    <small id="emailHelp" class="form-text text-muted">Don't have an account? <a href="/signup">Sign Up</a></small>
  </form>

  <img src="/images/login-1.jpeg" alt="" style="padding-right:20px;">

</div>

<script>
  const Message = '<%=message%>'
  if (Message != '')
    alert(Message)
</script>

</body>

</html>
